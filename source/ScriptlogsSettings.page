<?php
require_once '/usr/local/emhttp/plugins/dynamix/include/Helpers.php';

$plugin_name = 'scriptlogs';
$cfg_file = "/boot/config/plugins/{$plugin_name}/{$plugin_name}.cfg";

// Load the current settings
$cfg = parse_plugin_cfg($plugin_name, true);

// Save the new settings when the form is submitted
if ($_POST['#apply']) {
  // Update settings from the form
  $cfg['REFRESH_ENABLED'] = $_POST['REFRESH_ENABLED'];
  $cfg['REFRESH_INTERVAL'] = $_POST['REFRESH_INTERVAL'];
  // Convert the checkbox array into a comma-separated string
  $cfg['ENABLED_SCRIPTS'] = isset($_POST['ENABLED_SCRIPTS']) ? implode(',', $_POST['ENABLED_SCRIPTS']) : '';

  // Write the new settings to the .cfg file
  $ini = '';
  foreach ($cfg as $key => $value) {
    $ini .= "{$key}=\"{$value}\"\n";
  }
  file_put_contents($cfg_file, $ini);
  
  // Reload the page to show the saved values
  header("Location: {$_SERVER['REQUEST_URI']}");
  exit;
}

// Find all available user scripts
$user_scripts_path = '/boot/config/plugins/user.scripts/scripts';
$available_scripts = [];
if (is_dir($user_scripts_path)) {
  // Scan the directory for all folders (each is a script)
  $scripts = array_diff(scandir($user_scripts_path), ['.', '..']);
  foreach ($scripts as $script_name) {
    if (is_dir("{$user_scripts_path}/{$script_name}")) {
      $available_scripts[] = $script_name;
    }
  }
}

// Convert the enabled scripts string into an array for the checkboxes
$enabled_scripts_array = explode(',', $cfg['ENABLED_SCRIPTS']);
?>

<form name="scriptlogs_settings" method="post">
  <div class="content">
    <div class="settings">
      <h3>General Settings</h3>
      <dl>
        <dt>Automatic Refresh:</dt>
        <dd>
          <select name="REFRESH_ENABLED" class="form-control">
            <?=mk_option($cfg['REFRESH_ENABLED'], "1", "Enabled");?>
            <?=mk_option($cfg['REFRESH_ENABLED'], "0", "Disabled");?>
          </select>
        </dd>
        
        <dt>Refresh Interval (in seconds):</dt>
        <dd>
          <input type="number" name="REFRESH_INTERVAL" class="form-control" min="1" value="<?=$cfg['REFRESH_INTERVAL']?>">
        </dd>
      </dl>

      <h3>Script Selection</h3>
      <p>Select which scripts should be displayed in the dashboard widget.</p>
      <div class="script-list">
        <?php if (empty($available_scripts)): ?>
          <p>No user scripts found. Please create scripts in the "User Scripts" plugin first.</p>
        <?php else: ?>
          <?php foreach ($available_scripts as $script): ?>
            <div class="script-item">
              <input type="checkbox" name="ENABLED_SCRIPTS[]" value="<?=htmlspecialchars($script)?>" <?=in_array($script, $enabled_scripts_array) ? 'checked' : ''?>>
              <label><?=htmlspecialchars($script)?></label>
            </div>
          <?php endforeach; ?>
        <?php endif; ?>
      </div>
      
      <div class="buttons">
        <input type="submit" name="#apply" value="Apply">
        <input type="button" value="Done" onclick="done()">
      </div>
    </div>
  </div>
</form>